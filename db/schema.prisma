datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

generator client {
    provider = "prisma-client-js"
}

model Admins {
    username String  @id @unique
    email    String  @unique
    password String
    apps     CApps[]
    verified Boolean @default(false)
}

model CApps {
    id           String    @id @unique
    name         String    @default("ClientApp")
    registeredOn DateTime  @default(now())
    apiKey       String    @unique
    apiSecret    String    @unique
    callbackUrl  String?
    adminId      String
    admin        Admins    @relation(fields: [adminId], references: [username])
    History      History[]
}

enum TransactionType {
    TOPUP
    REDEEM
    SPECIAL
}

model History {
    id              String          @id @unique
    transactionId   String          @unique
    serviceProvider String
    value           Decimal
    type            TransactionType @default(TOPUP)
    topupId         String
    remarks         String          @default("")
    appId           String
    app             CApps           @relation(fields: [appId], references: [id])
    date            DateTime        @default(now())
}
